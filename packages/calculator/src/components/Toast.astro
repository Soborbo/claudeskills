---
/**
 * Toast - Notification Component
 *
 * Shows success/error messages after form submission.
 */

export interface Props {
  /** Toast type */
  type?: 'success' | 'error' | 'info' | 'warning';
  /** Toast message */
  message?: string;
  /** Auto-hide duration (ms), 0 to disable */
  duration?: number;
  /** Show close button */
  dismissible?: boolean;
  /** Additional classes */
  class?: string;
}

const {
  type = 'success',
  message,
  duration = 5000,
  dismissible = true,
  class: className,
} = Astro.props;

const icons = {
  success: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`,
  error: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>`,
  info: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  warning: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`,
};

const colors = {
  success: 'bg-green-50 border-green-200 text-green-800',
  error: 'bg-red-50 border-red-200 text-red-800',
  info: 'bg-blue-50 border-blue-200 text-blue-800',
  warning: 'bg-amber-50 border-amber-200 text-amber-800',
};

const iconColors = {
  success: 'text-green-500',
  error: 'text-red-500',
  info: 'text-blue-500',
  warning: 'text-amber-500',
};
---

{/* Toast container for programmatic toasts */}
<div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col gap-2">
  <slot />
</div>

{/* Static toast (if message provided) */}
{message && (
  <div
    class:list={[
      'toast',
      'flex items-center gap-3 p-4 rounded-lg border shadow-lg',
      colors[type],
      className,
    ]}
    data-toast
    data-duration={duration}
    role="alert"
  >
    <span class:list={['flex-shrink-0', iconColors[type]]} set:html={icons[type]} />
    <p class="flex-1 text-sm font-medium">{message}</p>
    {dismissible && (
      <button
        type="button"
        data-toast-close
        class="flex-shrink-0 p-1 rounded hover:bg-black/5 transition-colors"
        aria-label="Bez치r치s"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    )}
  </div>
)}

<script>
  // Toast management
  interface ToastOptions {
    type?: 'success' | 'error' | 'info' | 'warning';
    message: string;
    duration?: number;
    dismissible?: boolean;
  }

  const icons = {
    success: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`,
    error: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>`,
    info: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    warning: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`,
  };

  const colors = {
    success: 'bg-green-50 border-green-200 text-green-800',
    error: 'bg-red-50 border-red-200 text-red-800',
    info: 'bg-blue-50 border-blue-200 text-blue-800',
    warning: 'bg-amber-50 border-amber-200 text-amber-800',
  };

  const iconColors = {
    success: 'text-green-500',
    error: 'text-red-500',
    info: 'text-blue-500',
    warning: 'text-amber-500',
  };

  function showToast(options: ToastOptions): void {
    const { type = 'success', message, duration = 5000, dismissible = true } = options;

    const container = document.getElementById('toast-container');
    if (!container) return;

    const toast = document.createElement('div');
    toast.className = `toast flex items-center gap-3 p-4 rounded-lg border shadow-lg transform translate-x-full transition-transform duration-300 ${colors[type]}`;
    toast.setAttribute('role', 'alert');

    toast.innerHTML = `
      <span class="flex-shrink-0 ${iconColors[type]}">${icons[type]}</span>
      <p class="flex-1 text-sm font-medium">${message}</p>
      ${dismissible ? `
        <button type="button" data-toast-close class="flex-shrink-0 p-1 rounded hover:bg-black/5 transition-colors" aria-label="Bez치r치s">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      ` : ''}
    `;

    container.appendChild(toast);

    // Animate in
    requestAnimationFrame(() => {
      toast.classList.remove('translate-x-full');
    });

    // Close handler
    const closeBtn = toast.querySelector('[data-toast-close]');
    const removeToast = () => {
      toast.classList.add('translate-x-full');
      setTimeout(() => toast.remove(), 300);
    };

    if (closeBtn) {
      closeBtn.addEventListener('click', removeToast);
    }

    // Auto-hide
    if (duration > 0) {
      setTimeout(removeToast, duration);
    }
  }

  // Initialize static toasts
  function initStaticToasts() {
    document.querySelectorAll<HTMLDivElement>('[data-toast]').forEach((toast) => {
      const duration = parseInt(toast.dataset.duration || '5000', 10);
      const closeBtn = toast.querySelector('[data-toast-close]');

      if (closeBtn) {
        closeBtn.addEventListener('click', () => {
          toast.classList.add('opacity-0');
          setTimeout(() => toast.remove(), 300);
        });
      }

      if (duration > 0) {
        setTimeout(() => {
          toast.classList.add('opacity-0');
          setTimeout(() => toast.remove(), 300);
        }, duration);
      }
    });
  }

  // Expose to window
  (window as any).showToast = showToast;

  // Init
  initStaticToasts();
  document.addEventListener('astro:page-load', initStaticToasts);
</script>

<style>
  .toast {
    min-width: 300px;
    max-width: 400px;
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>
