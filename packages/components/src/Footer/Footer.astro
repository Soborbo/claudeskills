---
/**
 * Footer Component
 *
 * Site footer with columns, social links, opening hours, and legal links.
 * Includes extra padding on mobile to clear sticky CTA bar.
 * Outputs LocalBusiness schema.org JSON-LD when business info is provided.
 *
 * @example
 * <Footer
 *   companyName="Cégünk Kft."
 *   companyInfo="Megbízható költöztetés 2005 óta."
 *   address="1234 Budapest, Példa utca 1."
 *   phone="+36 1 234 5678"
 *   email="info@example.hu"
 *   socialLinks={[
 *     { platform: 'facebook', href: 'https://facebook.com/company' },
 *     { platform: 'instagram', href: 'https://instagram.com/company' },
 *   ]}
 *   openingHours={[
 *     { days: 'Hétfő - Péntek', hours: '08:00 - 18:00' },
 *     { days: 'Szombat', hours: '09:00 - 14:00' },
 *     { days: 'Vasárnap', hours: 'Zárva' },
 *   ]}
 *   columns={[
 *     {
 *       title: 'Szolgáltatások',
 *       links: [
 *         { label: 'Lakásköltöztetés', href: '/szolgaltatasok/lakas' },
 *         { label: 'Irodaköltöztetés', href: '/szolgaltatasok/iroda' },
 *       ],
 *     },
 *   ]}
 *   legalLinks={[
 *     { label: 'Adatvédelem', href: '/adatvedelem' },
 *     { label: 'ÁSZF', href: '/aszf' },
 *   ]}
 * />
 */

export interface FooterLink {
  label: string;
  href: string;
}

export interface FooterColumn {
  title: string;
  links: FooterLink[];
}

export type SocialPlatform = 'facebook' | 'instagram' | 'linkedin' | 'youtube' | 'tiktok' | 'twitter';

export interface SocialLink {
  platform: SocialPlatform;
  href: string;
  label?: string;
}

export interface OpeningHoursSpec {
  days: string;
  hours: string;
  /** ISO day codes for schema (e.g., 'Mo-Fr', 'Sa') */
  schemaDays?: string;
  /** ISO time for schema (e.g., '08:00-18:00') */
  schemaTime?: string;
}

export interface Props {
  /** Company name */
  companyName: string;

  /** Short company description */
  companyInfo?: string;

  /** Logo source (optional) */
  logo?: string;

  /** Physical address */
  address?: string;

  /** Phone number */
  phone?: string;

  /** Email address */
  email?: string;

  /** Social media links */
  socialLinks?: SocialLink[];

  /** Opening hours display */
  openingHours?: OpeningHoursSpec[];

  /** Opening hours section title */
  openingHoursTitle?: string;

  /** Footer link columns */
  columns?: FooterColumn[];

  /** Legal/policy links for bottom bar */
  legalLinks?: FooterLink[];

  /** Copyright year (default: current year) */
  copyrightYear?: number;

  /** Enable LocalBusiness schema output */
  enableSchema?: boolean;

  /** Business type for schema (default: LocalBusiness) */
  schemaType?: string;

  /** Website URL for schema */
  siteUrl?: string;

  /** Additional CSS classes */
  class?: string;
}

const {
  companyName,
  companyInfo,
  logo,
  address,
  phone,
  email,
  socialLinks = [],
  openingHours = [],
  openingHoursTitle = 'Nyitvatartás',
  columns = [],
  legalLinks = [],
  copyrightYear = new Date().getFullYear(),
  enableSchema = true,
  schemaType = 'LocalBusiness',
  siteUrl,
  class: className,
} = Astro.props;

const phoneClean = phone?.replace(/\s/g, '');

