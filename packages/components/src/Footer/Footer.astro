// Build LocalBusiness schema
function buildLocalBusinessSchema() {
  if (!enableSchema) return null;

  const schema: Record<string, unknown> = {
    '@context': 'https://schema.org',
    '@type': schemaType,
    name: companyName,
  };

  if (companyInfo) schema.description = companyInfo;
  if (siteUrl) schema.url = siteUrl;
  if (phone) schema.telephone = phone;
  if (email) schema.email = email;
  if (address) {
    schema.address = {
      '@type': 'PostalAddress',
      streetAddress: address,
    };
  }

  // Social profiles
  if (socialLinks.length > 0) {
    schema.sameAs = socialLinks.map(s => s.href);
  }

  // Opening hours
  if (openingHours.length > 0) {
    const hoursSpecs = openingHours
      .filter(h => h.schemaDays && h.schemaTime)
      .map(h => ({
        '@type': 'OpeningHoursSpecification',
        dayOfWeek: h.schemaDays,
        opens: h.schemaTime?.split('-')[0],
        closes: h.schemaTime?.split('-')[1],
      }));
    if (hoursSpecs.length > 0) {
      schema.openingHoursSpecification = hoursSpecs;
    }
  }

  return schema;
}

const localBusinessSchema = buildLocalBusinessSchema();
---

<footer
  class:list={[
    'bg-gray-900 text-gray-300',
    'pb-24 md:pb-12', // Extra padding on mobile for sticky CTA bar
    className,
  ]}
>
  <div class="container mx-auto px-4 pt-12 md:pt-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info Column -->
      <div class="lg:col-span-1">
        {logo ? (
          <a href="/" class="inline-block mb-4">
            <img src={logo} alt={companyName} class="h-10 w-auto brightness-0 invert" />
          </a>
        ) : (
          <h3 class="text-white font-bold text-lg mb-4">{companyName}</h3>
        )}

        {companyInfo && (
          <p class="text-gray-400 mb-4 text-sm leading-relaxed">{companyInfo}</p>
        )}

        <ul class="space-y-2 text-sm">
          {address && (
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{address}</span>
            </li>
          )}
          {phone && (
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href={`tel:${phoneClean}`} class="hover:text-white transition-colors">
                {phone}
              </a>
            </li>
          )}
          {email && (
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href={`mailto:${email}`} class="hover:text-white transition-colors">
                {email}
              </a>
            </li>
          )}
        </ul>

        <!-- Social Links -->
        {socialLinks.length > 0 && (
          <div class="flex items-center gap-3 mt-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-full bg-gray-800 text-gray-400 hover:bg-primary-600 hover:text-white transition-colors"
                aria-label={social.label || social.platform}
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <Fragment set:html={socialIcons[social.platform]} />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Opening Hours -->
      {openingHours.length > 0 && (
        <div>
          <h3 class="text-white font-semibold mb-4">{openingHoursTitle}</h3>
          <ul class="space-y-2 text-sm">
            {openingHours.map((hours) => (
              <li class="flex justify-between gap-4">
                <span class="text-gray-400">{hours.days}</span>
                <span class="text-gray-300 font-medium">{hours.hours}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Link Columns -->
      {columns.map((column) => (
        <div>
          <h3 class="text-white font-semibold mb-4">{column.title}</h3>
          <ul class="space-y-2">
            {column.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-400 hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-500">
        <p>© {copyrightYear} {companyName}. Minden jog fenntartva.</p>

        {legalLinks.length > 0 && (
          <nav aria-label="Legal links">
            <ul class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
              {legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="hover:text-gray-300 transition-colors"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )}
      </div>
    </div>
  </div>

  <!-- LocalBusiness Schema JSON-LD -->
  {localBusinessSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema, null, 2)} />
  )}
</footer>
