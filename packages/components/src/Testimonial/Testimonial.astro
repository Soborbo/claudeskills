---
/**
 * Testimonial Component
 *
 * Displays a testimonial card with rating, quote, and attribution.
 * Follows social proof best practices: specific, named, recent.
 *
 * @example
 * <Testimonial
 *   quote="The team was professional and efficient. Highly recommend!"
 *   name="Sarah Mitchell"
 *   location="Clifton, Bristol"
 *   rating={5}
 *   date="December 2024"
 * />
 */
import type { ImageMetadata } from 'astro';

export interface Props {
  /** The testimonial quote text */
  quote: string;

  /** Full name (or first name + initial for privacy) */
  name: string;

  /** Location for credibility (e.g., "Clifton, Bristol") */
  location: string;

  /** Star rating (1-5) */
  rating: 1 | 2 | 3 | 4 | 5;

  /**
   * Avatar image (optional)
   * Use real photos, never stock photos
   */
  image?: ImageMetadata | string;

  /** Date of testimonial (e.g., "December 2024") */
  date?: string;

  /** Visual variant */
  variant?: 'card' | 'minimal' | 'featured';

  /** Additional CSS classes */
  class?: string;
}

const {
  quote,
  name,
  location,
  rating,
  image,
  date,
  variant = 'card',
  class: className,
} = Astro.props;

const variantClasses = {
  card: 'bg-white rounded-xl p-6 shadow-sm border border-gray-100',
  minimal: 'py-4',
  featured: 'bg-primary-50 rounded-xl p-8 border border-primary-100',
};

// Get image src depending on type
const imageSrc = typeof image === 'string' ? image : image?.src;
---

<blockquote class:list={[variantClasses[variant], className]}>
  <!-- Star Rating -->
  <div class="flex gap-0.5 mb-3" role="img" aria-label={`${rating} out of 5 stars`}>
    {[1, 2, 3, 4, 5].map((star) => (
      <svg
        class:list={[
          'w-5 h-5',
          star <= rating ? 'text-yellow-400' : 'text-gray-200',
        ]}
        fill="currentColor"
        viewBox="0 0 20 20"
        aria-hidden="true"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <p class:list={[
    'text-gray-700 mb-4',
    variant === 'featured' && 'text-lg',
  ]}>
    "{quote}"
  </p>

  <!-- Attribution -->
  <footer class="flex items-center gap-3">
    {imageSrc ? (
      <img
        src={imageSrc}
        alt=""
        class="w-12 h-12 rounded-full object-cover"
        width="48"
        height="48"
        loading="lazy"
      />
    ) : (
      <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-semibold text-lg">
        {name.charAt(0).toUpperCase()}
      </div>
    )}
    <div class="flex-1 min-w-0">
      <cite class="not-italic font-semibold text-gray-900 block">{name}</cite>
      <p class="text-sm text-gray-500 truncate">{location}</p>
    </div>
    {date && (
      <time class="text-xs text-gray-400 whitespace-nowrap">{date}</time>
    )}
  </footer>
</blockquote>
