---
/**
 * MobileCtaBar Component
 *
 * Sticky bottom CTA bar for mobile devices.
 * Two buttons: Call + Primary action.
 *
 * @example
 * <MobileCtaBar
 *   phone="+36 1 234 5678"
 *   phoneText="Hívjon most"
 *   ctaText="Online Árkalkulátor"
 *   ctaHref="/kalkulator"
 * />
 */

export interface Props {
  /** Phone number */
  phone: string;

  /** Phone button text (default: "Hívjon most") */
  phoneText?: string;

  /** Primary CTA text (default: "Online Árkalkulátor") */
  ctaText?: string;

  /** Primary CTA href */
  ctaHref: string;

  /** Show phone icon */
  showPhoneIcon?: boolean;

  /** Show calculator icon on CTA */
  showCtaIcon?: boolean;

  /** Additional CSS classes */
  class?: string;
}

const {
  phone,
  phoneText = 'Hívjon most',
  ctaText = 'Online Árkalkulátor',
  ctaHref,
  showPhoneIcon = true,
  showCtaIcon = true,
  class: className,
} = Astro.props;

const phoneClean = phone.replace(/\s/g, '');
---

<div
  class:list={[
    'fixed bottom-0 left-0 right-0 z-40 md:hidden',
    'bg-white border-t border-gray-200 shadow-[0_-4px_20px_rgba(0,0,0,0.1)]',
    'safe-area-bottom',
    className,
  ]}
  role="navigation"
  aria-label="Mobile actions"
>
  <div class="grid grid-cols-2 gap-2 p-3">
    <!-- Phone Button -->
    <a
      href={`tel:${phoneClean}`}
      class="flex items-center justify-center gap-2 px-4 py-3 bg-white text-gray-700 font-semibold rounded-lg border-2 border-gray-200 hover:bg-gray-50 hover:border-gray-300 active:bg-gray-100 transition-all"
    >
      {showPhoneIcon && (
        <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      )}
      <span class="truncate">{phoneText}</span>
    </a>

    <!-- Primary CTA Button -->
    <a
      href={ctaHref}
      class="flex items-center justify-center gap-2 px-4 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 active:bg-primary-800 transition-all"
    >
      {showCtaIcon && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
      )}
      <span class="truncate">{ctaText}</span>
    </a>
  </div>
</div>

<!-- Spacer for content to not be hidden behind sticky bar -->
<div class="h-[76px] md:hidden" aria-hidden="true"></div>

<style>
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
</style>
